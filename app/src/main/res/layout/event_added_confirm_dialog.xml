<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/ten_dp"
        android:layout_weight="8.5"
        android:gravity="center"
        android:background="@drawable/background_with_purple_shadow"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="@dimen/two_hundred_fifty_dp"
            android:layout_height="@dimen/two_hundred_fifty_dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/green_circle"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/sixty_dp"
                android:layout_height="@dimen/sixty_dp"
                android:background="@drawable/faded_circle"
                android:padding="@dimen/fifteen_dp"
                android:src="@drawable/correct" />

        </LinearLayout>

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ten_dp"
            android:padding="@dimen/ten_dp"
            android:text="TIME"
            android:textColor="@android:color/white"
            android:textSize="@dimen/twenty_sp"
            pixlui:typeface="Roboto-Bold.ttf" />

        <com.neopixl.pixlui.components.textview.TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ten_dp"
            android:padding="@dimen/ten_dp"
            android:text="@string/event_confirm"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sixteen_sp"
            pixlui:typeface="Roboto-Bold.ttf" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/confirmLL"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_marginRight="@dimen/ten_dp"
        android:layout_weight="1.2"
        android:background="@drawable/white_rounded_corners"
        android:gravity="center">

       <com.neopixl.pixlui.components.textview.TextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="OK"
           android:textColor="@color/background_medium"
           android:gravity="center"
           android:textSize="@dimen/twenty_sp"/>
    </LinearLayout>
</LinearLayout>